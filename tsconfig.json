{
    "compilerOptions": {
        "incremental": true,
        "baseUrl": ".",
        "declaration": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "lib": [
            "esnext"
        ],
        "module": "CommonJS",
        "outDir": "build",
        "resolveJsonModule": true,
        "strict": true,
        "target": "ESNext"
    },
    "include": [
        "./**/*.ts"
    ]
}